              <li>
                  <div class="d-flex justify-content-around">
                    <div class="btn btn-redBlack">
                      <%= @room.User01Name %>
                    </div>
                    <p class="btn btn-blackRed" data-toggle="modal" data-target="#Modal01" data-keyboard="true">
                      確認する
                    </p>
                  </div>
                  <% [*1..@theme.Nop].each do |n|%>
                    <div class="modal fade" id=<%= "Modal0#{n}"%> tabindex="-1">
                      <div class="modal-dialog modal-dialog-centered"><!-- modal-dialog-centeredのクラス追加で真ん中になる -->
                        <div class="modal-content">
                          <div class="modal-body">
                            <p class="text-center p-mb-5">
                              <% pry = roleArray.index("User0#{n}Role")%>
