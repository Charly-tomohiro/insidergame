<div class='carddetailPage'>
  <div class="container">
      <div class="mx-auto w-75"">
        <div class="p-5">
          <%= image_tag "positive_attitude.png", width: "100%" %>
        </div>
        <div class="text-center">
          <h3>テーマ：<span style="font-weight: bold;"><%= @theme.Title %><span></h3>
        </div>
        
        <div class="mt-5">
        <h3>役職</h3>
              <!-- どこに01~08のデータが入っているかを確認する-->
              <% roleArray = [@theme.Insider, @theme.Master, @theme.Normal01, @theme.Normal02, @theme.Normal03, @theme.Normal04, @theme.Normal05, @theme.Normal06, @theme.Normal07, @theme.Tag1, @theme.Tag2, @theme.Crazy] %>
                <% user01Num = roleArray.index("User01Role") %>
                <% user02Num = roleArray.index("User02Role") %>
                <% user03Num = roleArray.index("User03Role") %>
                <% user04Num = roleArray.index("User04Role") %>
                <% user05Num = roleArray.index("User05Role") %>
                <% user06Num = roleArray.index("User06Role") %>
                <% user07Num = roleArray.index("User07Role") %>
                <% user08Num = roleArray.index("User08Role") %>

            <!-- 01~08までの役割を明示する-->
            <% hashu = ["インサイダー", "マスター", "市民", "市民", "市民", "市民", "市民", "市民", "市民", "タッグ", "タッグ", "クレイジー"] %>
                  <li><%= @room.User01Name %> さん：<%= hashu[user01Num] %></li>
                  <li><%= @room.User02Name %> さん：<%= hashu[user02Num] %></li>
                  <li><%= @room.User03Name %> さん：<%= hashu[user03Num] %></li>
                  <li><%= @room.User04Name %> さん：<%= hashu[user04Num] %></li>
                <% if !user05Num.nil? %>
                  <li><%= @room.User05Name %> さん：<%= hashu[user05Num] %></li>
                <% end %>
                <% if !user06Num.nil? %>
                  <li><%= @room.User06Name %> さん：<%= hashu[user06Num] %></li>
                <% end %>
                <% if !user07Num.nil? %>
                  <li><%= @room.User07Name %> さん：<%= hashu[user07Num] %></li>
                <% end %>
                <% if !user08Num.nil? %>
                  <li><%= @room.User08Name %> さん：<%= hashu[user08Num] %></li>
                <% end %>

        <div class="form-input text-center">
          <%= link_to 'リトライ', new_room_theme_path(@room, @theme), class: "btn btn-blackRed" %>
        </div>
   </div>
  </div>
</div>

